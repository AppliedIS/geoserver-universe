{
    "id": "/{{eremetic.name}}",
    "cpus": {{eremetic.cpus}},
    "mem": {{eremetic.mem}},
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{eremetic.docker-image}}",
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 0
                }, {
                    "containerPort": 0,
                    "hostPort": 0
                }
            ]
        }
    },
    "constraints": [["hostname", "UNIQUE"]],
    "healthChecks": [{
        "protocol": "HTTP",
        "path": "/task",
        "portIndex": 0,
        "gracePeriodSeconds": 300,
        "intervalSeconds": 30,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3,
        "ignoreHttp1xx": false
    }],
    "labels": {
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{eremetic.name}}",
        "HAPROXY_0_VHOST": "{{eremetic.name}}",
        "traefik.portIndex": "0"
    },
    "env": {
        "FRAMEWORK_NAME": "{{eremetic.name}}",
        "MASTER": "zk://zk-1.zk:2181,zk-2.zk:2181,zk-3.zk:2181,zk-4.zk:2181,zk-5.zk:2181/mesos",
        "DATABASE": "zk://zk-1.zk:2181,zk-2.zk:2181,zk-3.zk:2181,zk-4.zk:2181,zk-5.zk:2181/{{eremetic.name}}",
        "LOGLEVEL": "{{eremetic.loglevel}}",
        "ADDRESS": "0.0.0.0",
        "PORT": "8000"
    }
    {{#eremetic.docker-credentials}},
    "uris": [
        "{{eremetic.docker-credentials}}"
    ]
    {{/eremetic.docker-credentials}}
}
