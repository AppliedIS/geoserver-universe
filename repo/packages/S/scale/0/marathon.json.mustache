{
    "id": "/scale",
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "droessne/dcos-scale:latest",
            "network": "BRIDGE",
            "portMappings": [
                { "containerPort": 80, "hostPort": 0, "servicePort": 13069, "protocol": "tcp" }
            ]
        }
    },
    "healthChecks": [{
        "path": "/",
        "protocol": "HTTP",
        "portIndex": 0
    }],
    "labels":{
        "HAPROXY_GROUP":"external"
    },
    "ports": [0],
    "cpus": 1.0,
    "mem": 1024.0
}
