{
    "properties": {
        "sigma-ui": {
            "type": "object",
            "description": "DC/OS service configuration properties",
            "required": [
                "name",
                "cpus",
                "mem"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the cluster",
                    "default": "sigma-ui"
                },
                "docker-image": {
                    "type": "string",
                    "description": "The repo and image to pull"
                },
                "docker-credentials": {
                    "type": "string",
                    "description": "URI to .dockercfg file with Docker credentials"
                },
                "cpus": {
                    "type": "number",
                    "description": "Number of CPU resources for each slave",
                    "default": 1.0
                },
                "mem": {
                    "type": "number",
                    "description": "Amount of memory for each slave",
                    "default": 2048
                }
            }
        },
        "app-info": {
            "type": "object",
            "description": "Meta settings for the application",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The name of the app, appearing in the UI"
                },
                "logo": {
                    "type": "string",
                    "description": "The logo of the app, appearing in the UI"
                }
            }
        },
        "app-urls": {
            "type": "object",
            "description": "Application URLs",
            "properties": {
                "aggregate": {
                    "type": "string",
                    "description": "The full URL to the Aggregate API"
                },
                "coverage": {
                    "type": "string",
                    "description": "The full URL to the Coverage API"
                },
                "overlays": {
                    "type": "string",
                    "description": "The full URL to the Overlays API"
                },
                "pointconverter": {
                    "type": "string",
                    "description": "The full URL to the Point Converter API"
                },
                "aoianalysis": {
                    "type": "string",
                    "description": "The full URL to the AOI Analysis API"
                },
                "correlate": {
                    "type": "string",
                    "description": "The full URL to the Correlate API"
                },
                "appstate": {
                    "type": "string",
                    "description": "The full URL to the App State API"
                }
            }
        }
    },
    "type": "object"
}
