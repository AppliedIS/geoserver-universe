{
    "id": "/{{ sigma-ui.name }}",
    "cpus": 1.0,
    "mem": 1024.0,
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{ resource.assets.container.docker.sigma-ui }}",
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 0
                }
            ]
        }
    },
    "constraints": [["hostname", "UNIQUE"]],
    "healthChecks": [{
        "protocol": "HTTP",
        "path": "/health/",
        "portIndex": 0,
        "gracePeriodSeconds": 300,
        "intervalSeconds": 30,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3,
        "ignoreHttp1xx": false
    }],
    "labels": {
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{ sigma-ui.name }}"
    },
    "env": {
        "FRAMEWORK_NAME": "{{ sigma-ui.name }}"
    }
}
