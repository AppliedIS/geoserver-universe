{
    "id": "/{{ sigma-ui.name }}",
    "cpus": {{ sigma-ui.cpus }},
    "mem": {{ sigma-ui.mem }},
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            {{ #sigma-ui.docker-image }}
                "image": "{{ sigma-ui.docker-image }}",
            {{ /sigma-ui.docker-image }}
            {{ ^sigma-ui.docker-image }}
                "image": "{{ resource.assets.container.docker.sigma-ui }}",
            {{ /sigma-ui.docker-image }}
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 0
                }
            ]
        }
    },
    "constraints": [["hostname", "UNIQUE"]],
    "healthChecks": [{
        "protocol": "HTTP",
        "path": "/health/",
        "portIndex": 0,
        "gracePeriodSeconds": 300,
        "intervalSeconds": 30,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3,
        "ignoreHttp1xx": false
    }],
    "labels": {
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{ sigma-ui.name }}",
        "HAPROXY_0_VHOST": "{{ sigma-ui.name }}"
    },
    "env": {
    },
    {{ #sigma-ui.docker-credentials }},
    "uris": [
        "{{ sigma-ui.docker-credentials }}"
    ]
    {{ /sigma-ui.docker-credentials }}
}
