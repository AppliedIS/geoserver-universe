{
    "id": "/{{ sigma-ui.name }}",
    "cpus": 1.0,
    "mem": 1024.0,
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{ resource.assets.container.docker.sigma-ui }}",
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 0
                }
            ]
        }
    },
    "labels": {
        "HAPROXY_GROUP": "internal,external",
        "HAPROXY_0_VHOST": "{{ sigma-ui.host }}"
    }
}
